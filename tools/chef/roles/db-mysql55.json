{
  "name": "db-mysql55",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "MySQL 5.5 database",
  "default_attributes": {
    "services": {
      "mysqld": ["enable", "start"]
    },
    "mysql": {
      "client": {
        "packages": [
          "mysql55",
          "mysql55-devel",
          "mysqlclient16"
        ]
      },
      "server": {
        "packages": [
          "mysql55-libs",
          "mysqlclient16",
          "mysql55-server"
        ]
      }
    }
  },
  "run_list": [
    "recipe[mysql::server]",
    "recipe[mysql::client]",
    "recipe[config-driven-helper::services]",
    "recipe[config-driven-helper::mysql-databases]",
    "recipe[config-driven-helper::mysql-users]"
  ]
}
