{
  "name": "packer",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "Base role to sync with Packer template",
  "override_attributes": {
    "php": {
      "packages": [
        "php54",
        "php54-bcmath",
        "php54-devel",
        "php54-fpm",
        "php54-gd",
        "php54-mbstring",
        "php54-mcrypt",
        "php54-pdo",
        "php54-pecl-imagick",
        "php54-pecl-memcache",
        "php54-pecl-redis",
        "php54-pecl-xdebug",
        "php54-soap",
        "php54-xml",
        "php54-xmlrpc"
      ]
    },
    "mysql": {
      "client": {
        "packages": [
          "mysql55",
          "mysql55-devel",
          "mysqlclient16"
        ]
      },
      "server": {
        "packages": [
          "mysql55-libs",
          "mysqlclient16",
          "mysql55-server"
        ]
      }
    }
  },
  "run_list": [
    "yum::ius",
    "yum::epel"
  ]
}
